APP_NAME="Bake & Grill"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database (PostgreSQL required)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=bakegrill
DB_USERNAME=bakegrill
DB_PASSWORD=secret

SESSION_DRIVER=database
QUEUE_CONNECTION=redis
CACHE_STORE=redis

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail
MAIL_MAILER=log
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Print Proxy (REQUIRED - generate secure random key for production)
PRINT_PROXY_URL=http://print-proxy:3000
PRINT_PROXY_KEY=dev-key-change-in-production-12345

# Dhiraagu SMS (REQUIRED for OTP and promotions)
DHIRAAGU_API_URL=https://messaging.dhiraagu.com.mv/v1/api/sms
DHIRAAGU_SMS_USERNAME=your_dhiraagu_username
DHIRAAGU_SMS_PASSWORD=your_dhiraagu_password

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:3003
POS_URL=http://localhost:3001
KDS_URL=http://localhost:3002

# BML Connect Payment Gateway
BML_BASE_URL=https://api.merchants.bankofmaldives.com.mv
BML_APP_ID=your_bml_app_id
BML_API_KEY=your_bml_api_key
BML_MERCHANT_ID=your_bml_merchant_id
BML_WEBHOOK_SECRET=your_bml_webhook_secret
BML_RETURN_URL="${APP_URL}/payments/bml/return"
BML_DEFAULT_CURRENCY=MVR
BML_ENVIRONMENT=production

# Promotions
PROMO_CODE_CASE_INSENSITIVE=true

# Tax
TAX_RATE_BP=0
TAX_INCLUSIVE=false

# Loyalty Program
LOYALTY_ENABLED=true
LOYALTY_EARN_RATE=1
LOYALTY_REDEEM_RATE=100
LOYALTY_MIN_REDEEM=100
LOYALTY_MAX_REDEEM=10000
LOYALTY_MAX_REDEEM_PERCENT=50
LOYALTY_HOLD_TTL=30
LOYALTY_TIERS_ENABLED=false
